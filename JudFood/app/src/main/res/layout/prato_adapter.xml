<?xml version="1.0" encoding="utf-8"?>

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cardPrato"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        app:cardCornerRadius="2dp"
        >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView
                android:id="@+id/codigo_prato"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/codigo_restaurante"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/codigo_favorito"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:visibility="invisible"
                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_marginTop="40dp"
                android:layout_height="200px"

                />

            <TextView
                android:id="@+id/tnome"
                android:layout_below="@+id/imageView"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textStyle="bold"
                android:layout_centerInParent="true"
                android:gravity="center"
                />
            <ImageButton
                android:id="@+id/favorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="52dp"
                android:background="@color/cardview_light_background"
                app:srcCompat="@android:drawable/star_off"
                android:onClick="favoritar"
                />
            <ImageButton
                android:id="@+id/desfavorito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="52dp"
                android:background="@color/cardview_light_background"
                app:srcCompat="@android:drawable/star_on"
                android:onClick="desfavoritar"
                android:visibility="invisible"
                />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

