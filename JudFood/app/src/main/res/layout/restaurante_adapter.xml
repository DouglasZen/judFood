<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardRestaurante"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    app:cardCornerRadius="2dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/madeira_clara"
        >

        <TextView
            android:id="@+id/restaurante_codigo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/restaurante_nome"
            android:layout_width="290dp"
            android:layout_height="match_parent"
            android:text="restaurante"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/background"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignEnd="@+id/restaurante_codigo"
            android:src="@mipmap/ic_restaurante"
            android:layout_alignParentBottom="true"

            />
    </RelativeLayout>
</android.support.v7.widget.CardView>