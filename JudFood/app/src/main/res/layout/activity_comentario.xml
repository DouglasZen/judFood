<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@color/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/resposta_comentario_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/resposta_comentario_codigo_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/resposta_restaurante_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/resposta_prato_codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_seta"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:onClick="voltar"
            />
        <TextView
            android:id="@+id/resposta_comentario_autor"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/resposta_texto_comentario"
            android:layout_below="@+id/resposta_comentario_autor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <RelativeLayout
            android:id="@+id/resposta_lista_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resposta_texto_comentario"
            >
            <EditText
                android:id="@+id/resposta_text_comment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"

                />
            <ImageButton
                android:id="@+id/resposta_send_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:srcCompat="@mipmap/ic_send"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:onClick="responder"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/resposta_layout_lista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resposta_lista_comment"
            >
            <android.support.v7.widget.RecyclerView
                android:id="@+id/resposta_lista_comment_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"
                >

            </android.support.v7.widget.RecyclerView>>
            <TextView
                android:id="@+id/integra_ver_todos"
                android:layout_below="@+id/integra_lista_comment_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/vermais"
                android:layout_centerHorizontal="true"
                android:onClick="vermais"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/integra_ver_menos"
                android:layout_below="@+id/integra_lista_comment_save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/vermenos"
                android:layout_centerHorizontal="true"
                android:onClick="vermenos"
                android:visibility="invisible"
                />
        </RelativeLayout>
    </RelativeLayout>



</ScrollView>
