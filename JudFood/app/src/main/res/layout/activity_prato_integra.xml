<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/integra_codigo_avaliacao"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"
            android:text="0"
            />
        <TextView
            android:id="@+id/integra_codigo_prato"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"
            />
        <TextView
            android:id="@+id/integra_codigo_restaurante"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/integra_nome"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="30dp"
            android:textStyle="bold"
            />
        <ImageView
            android:id="@+id/integra_image_prato"
            android:layout_below="@+id/integra_nome"
            android:layout_width="match_parent"
            android:layout_height="600px"/>
        <TextView
            android:id="@+id/integra_descricao"
            android:layout_below="@+id/integra_image_prato"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@+id/integra_descricao"
            android:layout_centerHorizontal="true">
            >

            <ImageButton
                android:id="@+id/integra_star_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="matrix"
                app:srcCompat="@mipmap/ic_star"
                android:onClick="botaoEstrela"
                />
            <ImageButton
                android:id="@+id/integra_star_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="matrix"
                app:srcCompat="@mipmap/ic_star"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/integra_star_1"
                android:onClick="botaoEstrela"
                />
            <ImageButton
                android:id="@+id/integra_star_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="matrix"
                app:srcCompat="@mipmap/ic_star"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/integra_star_2"
                android:onClick="botaoEstrela"
                />

            <ImageButton
                android:id="@+id/integra_star_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="matrix"
                app:srcCompat="@mipmap/ic_star"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/integra_star_3"
                android:onClick="botaoEstrela"
                />

            <ImageButton
                android:id="@+id/integra_star_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="matrix"
                app:srcCompat="@mipmap/ic_star"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/integra_star_4"
                android:onClick="botaoEstrela"
                />
        </RelativeLayout>

    </RelativeLayout>
</ScrollView>